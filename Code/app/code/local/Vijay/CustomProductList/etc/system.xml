<?xml version="1.0"?>
<config>
    <tabs>
        <myconf_vijaystore translate="label" module="customproductlist">
            <label>Custom Product List</label>
            <sort_order>400</sort_order>
        </myconf_vijaystore>
    </tabs>
    
	<sections>
        <customproductlist_tab translate="label" module="customproductlist">
            <label>Custom Product List</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<customproductlist_setting translate="label comment">
                    <label>Custom Product List Configuration</label>
                    <sort_order>505</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
						<customproductlist_layouts translate="label comment">
                            <label>Layout</label>
							<frontend_type>select</frontend_type>
                            <!-- <source_model>page/source_layout</source_model> -->
                            <source_model>customproductlist/dropdown_layout</source_model> 
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customproductlist_layouts> 
						<customproductlist_categorys translate="label comment">
                            <label>Category</label>
							<frontend_type>select</frontend_type>
                            <source_model>customproductlist/dropdown_customcategory</source_model>
                            <validate>required-entry </validate>							
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customproductlist_categorys>
						<customproductlist_title translate="label comment">
                            <label>Page Title</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>							
                            <comment></comment>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_title>
						<customproductlist_sorting translate="label comment">
                            <label>Default Sortby</label>
                            <frontend_type>select</frontend_type>
                            <source_model>customproductlist/dropdown_sortby</source_model>
                            <validate>required-entry</validate>							
                            <comment></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_sorting>
						<customproductlist_direction translate="label comment">
                            <label>Default Direction</label>
                            <frontend_type>select</frontend_type>
                            <source_model>customproductlist/dropdown_direction</source_model>
                            <validate>required-entry</validate>							
                            <comment></comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_direction>
						<customproductlist_columncount translate="label comment">
                            <label>Default Column Count</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-number validate-digits-range digits-range-3-6</validate>
                            <comment> Enter column count minimum 3 and maximun 6</comment>
                            <sort_order>18</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_columncount>
						<customproductlist_meta_desc translate="label comment">
                            <label>Meta Description</label>
                            <frontend_type>textarea</frontend_type>
                            <!-- <validate>required-entry</validate> -->
                            <comment></comment>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_meta_desc>
						<customproductlist_meta_keyword translate="label comment">
                            <label>Meta Keyword</label>
                            <frontend_type>textarea</frontend_type>
                            <!-- <validate>required-entry</validate> -->
                            <comment></comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</customproductlist_meta_keyword>
					</fields>	
				</customproductlist_setting>
            </groups>
        </customproductlist_tab>  
    </sections>
</config>